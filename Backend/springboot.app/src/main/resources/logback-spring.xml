<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- Perfil de desarrollo -->
    <springProfile name="!prod">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>
        
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
        </root>
        
        <logger name="com.pomelo.app" level="DEBUG" />
    </springProfile>
    
    <!-- Perfil de producción - SOLO CONSOLA -->
    <springProfile name="prod">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>

        <!-- Logger para la aplicación -->
        <logger name="com.pomelo.app" level="INFO" />

        <!-- Logger para Spring Security -->
        <logger name="org.springframework.security" level="WARN" />

        <!-- Logger para Hibernate -->
        <logger name="org.hibernate" level="WARN" />

        <!-- Logger para Spring -->
        <logger name="org.springframework" level="WARN" />

        <!-- Root logger - SOLO CONSOLA -->
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
        </root>
    </springProfile>
    
</configuration>
