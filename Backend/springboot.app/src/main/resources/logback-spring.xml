<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- Perfil de desarrollo -->
    <springProfile name="!prod">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>
        
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
        </root>
        
        <logger name="com.pomelo.app" level="DEBUG" />
    </springProfile>
    
    <!-- Perfil de producción -->
    <springProfile name="prod">
        <!-- Appender para archivo de logs simplificado -->
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>logs/elemen-barber.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>logs/elemen-barber.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>7</maxHistory>
            </rollingPolicy>
            
            <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>
        
        <!-- Logger para la aplicación -->
        <logger name="com.pomelo.app" level="INFO" />
        
        <!-- Logger para Spring Security -->
        <logger name="org.springframework.security" level="WARN" />
        
        <!-- Logger para Hibernate -->
        <logger name="org.hibernate" level="WARN" />
        
        <!-- Logger para Spring -->
        <logger name="org.springframework" level="WARN" />
        
        <!-- Logger para HikariCP -->
        <logger name="com.zaxxer.hikari" level="WARN" />
        
        <!-- Root logger -->
        <root level="WARN">
            <appender-ref ref="FILE" />
        </root>
    </springProfile>
    
</configuration>
