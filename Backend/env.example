# ========================================
# VARIABLES DE ENTORNO PARA PRODUCCIÓN
# ========================================
# Copia este archivo como .env.prod y configura tus valores

# ========================================
# CONFIGURACIÓN DE SPRING BOOT
# ========================================
SPRING_PROFILES_ACTIVE=prod
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/esentialbarber
SPRING_DATASOURCE_USERNAME=admin
SPRING_DATASOURCE_PASSWORD=TU_CONTRASEÑA_FUERTE_AQUI

# ========================================
# CONFIGURACIÓN DE POSTGRESQL
# ========================================
POSTGRES_PASSWORD=TU_CONTRASEÑA_FUERTE_AQUI

# ========================================
# SEGURIDAD
# ========================================
SPRING_SECURITY_USER_NAME=admin
SPRING_SECURITY_USER_PASSWORD=admin123

# ========================================
# GOOGLE OAUTH
# ========================================
GOOGLE_CLIENT_ID=TU_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=TU_GOOGLE_CLIENT_SECRET
APP_GOOGLE_REDIRECT_URI=https://tu-dominio.com/auth/google/callback
ADMIN_EMAIL=tu-email@gmail.com
ADMIN_GOOGLE_CALENDAR_ENABLED=true

# ========================================
# EMAIL (SMTP)
# ========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=tu-email@gmail.com
MAIL_PASSWORD=TU_APP_PASSWORD_GMAIL

# ========================================
# CORS / FRONTEND
# ========================================
CORS_ALLOWED_ORIGINS=https://tu-dominio.com,https://www.tu-dominio.com
APP_FRONTEND_BASE_URL=https://tu-dominio.com

# ========================================
# SEGURIDAD AVANZADA
# ========================================
APP_SECURITY_HSTS_MAX_AGE=31536000
APP_SECURITY_CSP_DEFAULT_SRC=default-src 'self'

# ========================================
# RATE LIMITING
# ========================================
APP_RATE_LIMIT_MAX_REQUESTS=60
APP_RATE_LIMIT_MAX_LOGIN=5

# ========================================
# CONFIGURACIÓN JVM OPTIMIZADA
# ========================================
JAVA_OPTS=-Xmx2g -Xms1g -XX:+UseG1GC -XX:MaxGCPauseMillis=200 -XX:+UseStringDeduplication -XX:+OptimizeStringConcat -XX:+UseCompressedOops -XX:+UseCompressedClassPointers -XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0

# ========================================
# LOGGING
# ========================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_ESENTIALBARBER=INFO
